@using BlazorBootstrap
@using Elements

<Modal @ref="addPasswordModal" Title="Add password" Size="ModalSize.Small">
    <BodyTemplate>
        <AddForm CloseModalParent=@CloseModal UpdateTable=@UpdateTable/>
    </BodyTemplate>
    <FooterTemplate>
    </FooterTemplate>

</Modal>

@code {
    private Modal addPasswordModal;
    private AddForm addForm = new AddForm();
    [Parameter] public EventCallback Refresh { get; set; }

    public void Show()
    {
        addPasswordModal.ShowAsync();
    }

    public void CloseModal()
    {
        addPasswordModal.HideAsync();
    }

    public async void UpdateTable()
    {
        await Refresh.InvokeAsync();
    }
}

