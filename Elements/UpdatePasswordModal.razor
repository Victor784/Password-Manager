@using BlazorBootstrap
@using Elements
@using ApiReturnTypes

<Modal @ref="updatePasswordModal" Title="Update password" Size="ModalSize.Small">
    <BodyTemplate>
         <UpdateForm CloseModalParent=@CloseModal PasswordToBeChanged="@SelectedPassword" />
    </BodyTemplate>
    <FooterTemplate>
    </FooterTemplate>

</Modal>

@code {
    private Modal updatePasswordModal;

    [Parameter]
    public Password SelectedPassword { get; set; }

    private UpdateForm addForm = new UpdateForm();

    public void Show()
    {
        updatePasswordModal.ShowAsync();
    }

    public void CloseModal()
    {
        updatePasswordModal.HideAsync();
    }
}

