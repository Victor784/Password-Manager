@using BlazorBootstrap
@using Elements
@using ApiReturnTypes

<Modal @ref="updatePasswordModal" Title="Update password" Size="ModalSize.Small">
    <BodyTemplate>
        <UpdateForm CloseModalParent=@CloseModal PasswordToBeChanged="@SelectedPassword" UpdateTable=@UpdateTable />
    </BodyTemplate>
    <FooterTemplate>
    </FooterTemplate>

</Modal>

@code {
    private Modal updatePasswordModal;

    [Parameter]
    public Password SelectedPassword { get; set; }

    [Parameter] public EventCallback Refresh { get; set; }


    public void Show()
    {
        updatePasswordModal.ShowAsync();
    }

    public void CloseModal()
    {
        updatePasswordModal.HideAsync();
    }

    public async void UpdateTable()
    {
        await Refresh.InvokeAsync();
    }
}

