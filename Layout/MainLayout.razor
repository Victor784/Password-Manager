@inherits LayoutComponentBase
@using Elements

@inject Services.AuthenticationService AuthManager;

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 gradient-border-bottom">
             <NavLink class="nav-link" href="login">
                <BlazorBootstrap.Button class="main_layout_btn" @onclick="LogOutUser">Log out</BlazorBootstrap.Button>
             </NavLink>
            
            <PasswordManagerClient.Elements.StylesDropDownMenu />
        </div>

        <article class="content px-4">
            @Body
        </article>
        
    </main>
    
</div>

@code{

    private void LogOutUser()
    {
        AuthManager.DeauthenticateUser();
    }

}